# Smart-Find Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_STRING=mongodb://root:password@host:port/?directConnection=true

# Google Maps Configuration
VITE_GOOGLE_API_KEY=your-google-maps-api-key-here
VITE_GOOGLE_MAP_ID=your-google-map-id-here

# MapBox Configuration
VITE_MAPBOX_STYLE_URL=https://api.mapbox.com/styles/v1/your-username/your-style-id
VITE_MAPBOX_ACCESS_TOKEN=pk.eyJ-your-mapbox-token-here

# API Security
API_SECRET_KEY=your-secure-secret-key-for-api-authentication

# Email Configuration (for Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
